<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <carbon.widget.ImageView
        android:id="@+id/backBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        android:src="@drawable/ic_back"
        app:carbon_cornerRadius="12dp"
        app:carbon_rippleColor="@color/colorAccent"
        app:carbon_rippleStyle="background"
        app:carbon_stroke="@color/white"
        app:carbon_strokeWidth="2dp"
        app:carbon_tint="@color/white" />

    <TextView
        android:id="@+id/topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/backBtn"
        android:fontFamily="@font/main_font"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <carbon.widget.LinearLayout
        android:id="@+id/mainCont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:carbon_cornerRadius="10dp"
        app:carbon_elevation="8dp"
        app:carbon_elevationShadowColor="@color/colorAccent">

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordET"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/main_font"
            android:text="Phone Number"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <carbon.widget.EditText
            android:id="@+id/phoneNumberET"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@id/text5"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="18dp"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="@font/main_font"
            android:hint="+91 000-000-0000"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/carbon_grey_200"
            android:textSize="16sp"
            app:carbon_cornerRadius="10dp"
            app:carbon_cursorColor="@color/white" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameET"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/main_font"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <carbon.widget.EditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@id/text4"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="18dp"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="@font/main_font"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/carbon_grey_200"
            android:textSize="16sp"
            app:carbon_cornerRadius="10dp"
            app:carbon_cursorColor="@color/white" />

        <carbon.widget.Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_gradient"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:text="Continue"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:carbon_cornerRadius="10dp"
            app:carbon_rippleColor="@color/colorAccent"
            app:carbon_rippleStyle="background"
            app:carbon_tint="@color/carbon_grey_300" />

    </carbon.widget.LinearLayout>

    <carbon.widget.ImageView
        android:id="@+id/appIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@id/mainCont"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/app_icon"
        android:translationZ="90dp" />

    <TextView
        android:id="@+id/createNewAccountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainCont"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/main_font"
        android:text="Create A New Account ?  Sign Up"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>